<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Global Track Central</title>

	<style type="text/css">
     
		body {
		  font-family: Tahoma,Verdana;
		  padding: 20px;
		  color: #000;

		  background: #000 url(http://static9.cdn.ubi.com/resource/en-GB/game/trials/portal/trials_fusion_bg.jpg) no-repeat center top;
		  background-attachment: fixed;
		}

		h1 {
		  font-weight: normal;
		  font-size: 40px;
		  font-weight: normal;
		  text-transform: uppercase;
          margin-top:0;
          margin-bottom:0;
		}

		h1 span {
		  font-size: 13px;
		  display: block;
		  padding-left: 4px;
		}

	    h2 { 
           text-align: center;
           margin:0;
	    }

		body .body { 
			width: 965px;
            margin-top:11px;			
			margin-left: auto;
			margin-right: auto;
            padding:10px;
            /*background-color:#cbe5ff;*/
            /*background:#D4DDE1;*/
		}

        /*** Crap*/
	    div.head { 
            margin: 0 0px;
            
	    }
	    div.head ul.pager { 
            float:right;
            margin-top:0px;            
	    }
	    ul.pager li { 
            display: inline-block;
	    }
	    ul.pager li a img { 
            border:0;
	    }
		/*** Menu */
		
	nav {
		margin: 0px auto; 
        width:100%;
		text-align: center;
	}

	nav ul ul {
		display: none;
	}

	nav ul li:hover > ul {
		display: block;
	}


	nav ul {
		background: #efefef; 
		background: linear-gradient(top, #efefef 0%, #bbbbbb 100%);  
		background: -moz-linear-gradient(top, #efefef 0%, #bbbbbb 100%); 
		background: -webkit-linear-gradient(top, #efefef 0%,#bbbbbb 100%); 
		/*box-shadow: 0px 0px 9px rgba(0,0,0,0.15);*/
		padding: 0 20px;
		border-radius: 5px;  
		list-style: none;
		position: relative;
		display: inline-table;
	}
	nav ul:after {
		content: ""; clear: both; display: block;
	}

	nav ul li {
		float: left;
        min-width:150px;
	}
	nav ul li:hover {
		background: #4b545f;
		background: linear-gradient(top, #4f5964 0%, #5f6975 40%);
		background: -moz-linear-gradient(top, #4f5964 0%, #5f6975 40%);
		background: -webkit-linear-gradient(top, #4f5964 0%,#5f6975 40%);
	}
		nav ul li:hover a {
			color: #fff;
		}
		
	nav ul li a {
		display: block; padding: 10px 20px;
		color: #757575; text-decoration: none;
	}
			
		
	nav ul ul {
		background: #5f6975; border-radius: 0px; padding: 0;
		position: absolute; top: 100%;
	}
	nav ul ul li {
		float: none; 
		border-top: 1px solid #6b727c;
		border-bottom: 1px solid #575f6a; position: relative;
	}
	nav ul ul li a {
		padding: 15px 40px;
		color: #fff;
	}	
	nav ul ul li a:hover {
		background: #4b545f;
	}
		
	nav ul ul ul {
		position: absolute; left: 100%; top:0;
	}

		/* /Menu */

        
     table {
  width: calc(100% + 28px);
  border-collapse: collapse;
  margin: -16px -14px;
}
        th, td {
          padding: 10px;
          border: 1px solid #eeeeee;
        }

        th:first-child,
        td:first-child {
          border-left: 0;
        }

        th:last-child,
        td:last-child {
          border-right: 0;
        }

        th {
          background: #f8f8f8;
        }

        tr:nth-child(odd) {
          background: #f8f8f8;
        }

        /*Grid*/
        
.grid {
  display: flex;
  display: -ms-flexbox;
}


.grid .col .buttons
{
    margin: 15px -15px -15px -15px;
     border-top: 1px solid #eee;
    padding: 10px 10px 10px 10px;
}

.grid .col {
  flex: 1 0 auto;
  -ms-flex: 1 0 auto;
 
  margin: 0 30px 15px 0;
  padding: 15px;
  border-radius: 3px;
  background: #fff;
  box-shadow: inset 0 -1px 0 1px rgba(0, 0, 0, 0.1);
}

.grid .col:last-child {
  margin-right: 0;
}

.grid .col .head {
  margin: -15px -15px 15px -15px;
  padding: 15px;
  font-size: 14px;
  font-weight: 700;
  border-bottom: 1px solid #eeeeee;
  
}

/*
** Buttons
***********************************************************/
div.buttons {
    text-align: right;
}

button.btn{
    border:none;
}

button.btn:hover{
    border:none;
}

.btn.large{
    min-width:100px;
}

.btn.mid{
    min-width:70px;
}

a.btn{
    text-decoration:none;
}
.btn {
  display: inline-block;
  
  margin-left: 10px;
  padding: 10px 15px 12px;
  font: 700 12px/1 'Open Sans', sans-serif;
  text-align: center;
  border-radius: 3px;
  cursor: pointer;

  
}

.btn.act {
  color: #fff;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.2);
  background: #59d;
  box-shadow: inset 0 -1px 0 1px rgba(0, 0, 0, 0.1), inset 0 -10px 20px rgba(0, 0, 0, 0.1);
}

.btn.act:hover {
  background: #4488cc;
}

.btn.pri {
  color: #fff;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.2);
  background: #6b6;
  box-shadow: inset 0 -1px 0 1px rgba(0, 0, 0, 0.1), inset 0 -10px 20px rgba(0, 0, 0, 0.1);
}

button.btn.pri:hover,
.btn.pri:hover {
  background: #55aa55;
}

.btn.sec {
  color: #999;
  text-shadow: 0 1px 0 rgba(255, 255, 255, 0.8);
  background: #fff;
  box-shadow: inset 0 -1px 0 1px rgba(0, 0, 0, 0.1), inset 0 -10px 20px rgba(0, 0, 0, 0.05);
}

/* table layout*/

	    .yt a img {  border:0}
	</style>
</head>
<body>
	<div class="body">
		@*<h1>Global Track Central<span>CUSTOM TRIALS TRACKS DATABASE</span></h1>*@

        <h2><img src="@Url.Content("~/Content/GTC.png")" /></h2>

		@Html.Partial("_Menu")

		@RenderBody()
	</div>
</body>
</html>
